# Copy to .env and set values. All vars except DATABASE_URL and SPREAD_HISTORY_* are required.

HTTP_TIMEOUT=5
PORT=8000
LOG_LEVEL=INFO
PRICE_UPDATE_INTERVAL=5

# Optional: spread history in Postgres. If unset, GET /v1/spread-history returns 503.
# Local (no Docker): 1) install & start Postgres  2) psql -d postgres -f scripts/init-local-db.sql
# Then uncomment:
# DATABASE_URL=postgresql://spreads:spreads@localhost:5432/spreads
# SPREAD_HISTORY_INTERVAL_SECONDS=3600
